-
  var videos = [
    { cover: '/assets/images/toyota/video-01.jpg', link: 'https://v.qq.com/x/page/r0362hzki67.html' },
    { cover: '/assets/images/toyota/video-02.jpg', link: 'https://v.qq.com/x/page/y03634woaxv.html' },
    { cover: '/assets/images/toyota/video-03.jpg', link: 'https://v.qq.com/x/page/o0363d3s573.html' }
